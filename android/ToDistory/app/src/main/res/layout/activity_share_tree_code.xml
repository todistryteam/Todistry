<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ShareTreeCodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgAppLogo"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:src="@drawable/app_name_image" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:contentDescription="@null"
            android:src="@drawable/home_icontop" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/dmsans_font_bold_italic"
        android:padding="@dimen/_3sdp"
        android:text="@string/sharing_love_and_creating_family_history_today"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/txtShareDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/dmsans_font_bold_regular"
        android:padding="@dimen/_3sdp"
        android:text="@string/share_details_text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/txtShareCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/dmsans_font_bold_regular"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="5 6 8 6 3 2"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textFontWeight="700"
        android:textSize="@dimen/_14ssp" />

    <RelativeLayout
        android:id="@+id/rlShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/circle_green_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_font_medium_regular"
                android:text="@string/share"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="@dimen/_13ssp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlNext"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/button_primary_background"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/official_logo" />

            <TextView
                android:id="@+id/txtNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imgLogo"
                android:fontFamily="@font/dmsans_font_bold_regular"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="@dimen/_13ssp" />

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/txtNext"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:rotation="270"
                android:src="@drawable/downarror_white" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>