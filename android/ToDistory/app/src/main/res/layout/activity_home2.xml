<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.home.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/header_orange_gradient_bg"
            android:layout_marginBottom="@dimen/_5sdp">

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@drawable/hamburger" />

            <TextView
                android:id="@+id/txtTreeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivMenu"
                android:fontFamily="@font/dmsans_font_bold_regular"
                android:padding="@dimen/_3sdp"
                android:text=""
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="@dimen/_15ssp" />

<!--            <ImageView-->
<!--                android:id="@+id/ivHome"-->
<!--                android:layout_width="@dimen/_25sdp"-->
<!--                android:layout_height="@dimen/_25sdp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginEnd="@dimen/_10sdp"-->
<!--                android:adjustViewBounds="true"-->
<!--                android:contentDescription="@null"-->
<!--                android:src="@drawable/home_icontop" />-->
        </RelativeLayout>

        <!-- Fragment container -->
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextAppearance="@style/NavMenuTextStyle"
        app:itemIconTint="@color/black"
        app:itemHorizontalPadding="@dimen/_8sdp"
        app:itemIconPadding="@dimen/_8sdp"
        app:itemTextColor="@color/black"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>